{
  "name": "@hideokamoto/markov-chain-tiny",
  "version": "0.1.0",
  "description": "markov chain generator by using tiny segmenter",
  "main": "dist/index.js",
  "scripts": {
    "build": "rollup -c",
    "tsc": "tsc",
    "test": "jest",
    "lint": "eslint 'libs/**/*.{ts,tsx}'",
    "doc": "typedoc --out docs libs/",
    "postversion": "git push origin $(git describe --abbrev=0 --tags)",
    "test:watch": "jest --watch",
    "test:dev": "jest --watch --silent=false --verbose false --coverage"
  },
  "keywords": [
    "markov chain"
  ],
  "bugs": {
    "url": "https://github.com/hideokamoto/markov-chain-tiny/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hideokamoto/markov-chain-tiny.git"
  },
  "author": "Hidetaka Okamoto <info@wp-kyoto.net> (https://wp-kyoto.net)",
  "license": "MIT",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*/*.+(ts|tsx|js)"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/jest": "24.9.1",
    "@types/node": "12.12.43",
    "@typescript-eslint/eslint-plugin": "1.13.0",
    "@typescript-eslint/parser": "1.13.0",
    "@typescript-eslint/typescript-estree": "1.13.0",
    "eslint": "6.8.0",
    "eslint-config-standard": "13.0.1",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-node": "9.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "husky": "3.0.2",
    "jest": "24.8.0",
    "lint-staged": "9.2.1",
    "rollup": "1.18.0",
    "rollup-plugin-typescript2": "0.22.1",
    "ts-jest": "24.0.2",
    "tslib": "1.10.0",
    "typedoc": "0.15.0",
    "typescript": "3.5.3"
  },
  "dependencies": {
    "tiny-segmenter": "^0.2.0"
  }
}
